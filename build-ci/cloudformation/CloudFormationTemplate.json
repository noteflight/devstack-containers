{
  "Resources": {
    "BuildBucket": {
      "Type": "AWS::S3::Bucket"
    },
    "BuildRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "codebuild.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            },
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "codepipeline.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "DevstackContainersBuildRolePolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Sid": "AllowECRPushPull",
                  "Effect": "Allow",
                  "Action": [
                    "ecr:BatchGetImage",
                    "ecr:BatchCheckLayerAvailability",
                    "ecr:CompleteLayerUpload",
                    "ecr:GetDownloadUrlForLayer",
                    "ecr:InitiateLayerUpload",
                    "ecr:PutImage",
                    "ecr:UploadLayerPart"
                  ],
                  "Resource": [
                    {
                      "Fn::GetAtt": [
                        "Repositorydynamodblocal",
                        "Arn"
                      ]
                    }
                  ]
                },
                {
                  "Sid": "AllowECRLogin",
                  "Effect": "Allow",
                  "Action": [
                    "ecr:GetAuthorizationToken"
                  ],
                  "Resource": "*"
                },
                {
                  "Sid": "AllowDockerHubSecret",
                  "Effect": "Allow",
                  "Action": [
                    "secretsmanager:GetResourcePolicy",
                    "secretsmanager:GetSecretValue",
                    "secretsmanager:DescribeSecret",
                    "secretsmanager:ListSecretVersionIds"
                  ],
                  "Resource": [
                    "arn:aws:secretsmanager:us-east-1:915434789528:secret:dockerhub/account/arista-bDIz6P"
                  ]
                },
                {
                  "Effect": "Allow",
                  "Resource": [
                    {
                      "Fn::GetAtt": [
                        "CloudWatchLogGroupdynamodblocal",
                        "Arn"
                      ]
                    }
                  ],
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:*"
                  ],
                  "Resource": [
                    {
                      "Fn::GetAtt": [
                        "BuildBucket",
                        "Arn"
                      ]
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "codestar-connections:UseConnection"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "Repositorydynamodblocal": {
      "Type": "AWS::ECR::Repository",
      "Properties": {
        "RepositoryName": "nf-devstack-dynamodblocal"
      }
    },
    "CloudWatchLogGroupdynamodblocal": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/codebuild/devstack-dynamodblocal",
        "RetentionInDays": 180
      }
    },
    "CodeBuilddynamodblocal": {
      "Type": "AWS::CodeBuild::Project",
      "Properties": {
        "Name": "devstack-dynamodblocal",
        "Description": "Builds the devstack-dynamodblocal Docker image and pushes it to the nf-devstack-dynamodblocal ECR repository",
        "Source": {
          "Type": "GITHUB",
          "Location": "https://github.com/noteflight/devstack-containers.git",
          "GitCloneDepth": 1,
          "BuildSpec": "build-ci/codebuild/buildspec-dynamodblocal.yml"
        },
        "SourceVersion": "main",
        "Artifacts": {
          "Type": "NO_ARTIFACTS"
        },
        "Cache": {
          "Type": "NO_CACHE"
        },
        "Environment": {
          "Type": "LINUX_CONTAINER",
          "Image": "aws/codebuild/standard:4.0",
          "ImagePullCredentialsType": "CODEBUILD",
          "ComputeType": "BUILD_GENERAL1_SMALL",
          "PrivilegedMode": true
        },
        "TimeoutInMinutes": 60,
        "LogsConfig": {
          "CloudWatchLogs": {
            "Status": "ENABLED",
            "GroupName": "/aws/codebuild/devstack-dynamodblocal"
          },
          "S3Logs": {
            "Status": "ENABLED",
            "EncryptionDisabled": true,
            "Location": {
              "Fn::Join": [
                "/",
                [
                  {
                    "Fn::GetAtt": [
                      "BuildBucket",
                      "Arn"
                    ]
                  },
                  "build-log"
                ]
              ]
            }
          }
        },
        "ServiceRole": {
          "Fn::GetAtt": [
            "BuildRole",
            "Arn"
          ]
        }
      }
    },
    "CodePipeline": {
      "Type": "AWS::CodePipeline::Pipeline",
      "Properties": {
        "Name": "devstack-containers",
        "ArtifactStore": {
          "Type": "S3",
          "Location": {
            "Ref": "BuildBucket"
          }
        },
        "RoleArn": {
          "Fn::GetAtt": [
            "BuildRole",
            "Arn"
          ]
        },
        "Stages": [
          {
            "Name": "Source",
            "Actions": [
              {
                "Name": "Source",
                "ActionTypeId": {
                  "Owner": "AWS",
                  "Category": "Source",
                  "Version": "1",
                  "Provider": "CodeStarSourceConnection"
                },
                "Configuration": {
                  "FullRepositoryId": "noteflight/devstack-containers",
                  "ConnectionArn": "arn:aws:codestar-connections:us-east-1:915434789528:connection/f92a8a58-c747-49f9-9392-fdfd88444e30",
                  "BranchName": "main",
                  "OutputArtifactFormat": "CODE_ZIP"
                },
                "OutputArtifacts": [
                  {
                    "Name": "SourceArtifact"
                  }
                ],
                "Region": "us-east-1"
              }
            ]
          },
          {
            "Name": "Build",
            "Actions": [
              {
                "Name": "Build-dynamodblocal",
                "InputArtifacts": [
                  {
                    "Name": "SourceArtifact"
                  }
                ],
                "ActionTypeId": {
                  "Owner": "AWS",
                  "Category": "Build",
                  "Version": "1",
                  "Provider": "CodeBuild"
                },
                "Configuration": {
                  "ProjectName": {
                    "Ref": "CodeBuilddynamodblocal"
                  }
                },
                "OutputArtifacts": [
                  {
                    "Name": "BuildArtifact"
                  }
                ],
                "Region": "us-east-1"
              }
            ]
          }
        ]
      }
    }
  },
  "Outputs": {
    "BuildBucket": {
      "Description": "The bucket containing build results and logs",
      "Value": {
        "Ref": "BuildBucket"
      }
    },
    "BuildBucketArn": {
      "Description": "The arn of the bucket containing build results and logs",
      "Value": {
        "Fn::GetAtt": [
          "BuildBucket",
          "Arn"
        ]
      }
    },
    "BuildRoleArn": {
      "Description": "The arn of the IAM role running the build",
      "Value": {
        "Fn::GetAtt": [
          "BuildRole",
          "Arn"
        ]
      }
    },
    "Repositorydynamodblocal": {
      "Description": "The ECR containing the built dynamodblocal images",
      "Value": {
        "Ref": "Repositorydynamodblocal"
      }
    },
    "RepositorydynamodblocalArn": {
      "Description": "The arn of the ECR containing the built dynamodblocal images",
      "Value": {
        "Fn::GetAtt": [
          "Repositorydynamodblocal",
          "Arn"
        ]
      }
    },
    "CloudWatchLogGroupdynamodblocal": {
      "Description": "The CloudWatch LogGroup for the dynamodblocal builds",
      "Value": {
        "Ref": "CloudWatchLogGroupdynamodblocal"
      }
    },
    "CloudWatchLogGroupdynamodblocalArn": {
      "Description": "The arn of the CloudWatch LogGroup for the dynamodblocal builds",
      "Value": {
        "Fn::GetAtt": [
          "CloudWatchLogGroupdynamodblocal",
          "Arn"
        ]
      }
    },
    "CodeBuilddynamodblocal": {
      "Description": "The CodeBuild project for the dynamodblocal builds",
      "Value": {
        "Ref": "CodeBuilddynamodblocal"
      }
    },
    "CodeBuilddynamodblocalArn": {
      "Description": "The arn of the CodeBuild project for the dynamodblocal builds",
      "Value": {
        "Fn::GetAtt": [
          "CodeBuilddynamodblocal",
          "Arn"
        ]
      }
    },
    "CodePipeline": {
      "Description": "The CodePipeline for building the containers",
      "Value": {
        "Ref": "CodePipeline"
      }
    }
  }
}
